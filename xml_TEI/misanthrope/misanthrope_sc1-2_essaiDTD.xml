<!DOCTYPE misanthrope [
    <!ELEMENT text (body)+>
    <!ELEMENT body (div)+>
    <!ELEMENT div (head | div+ | castList | sp+)>
    <!ELEMENT head (#PCDATA)>
    <!ELEMENT castList (castItem+)>
    <!ELEMENT castItem (#PCDATA)>
    <!ELEMENT sp (speaker | stage? | lg)>
    <!ELEMENT speaker (#PCDATA)>
    <!ELEMENT stage (#PCDATA)>
    <!ELEMENT lg (l+)>
    <!ELEMENT l (#PCDATA)>
    <!ATTLIST div type (acte|scene)>
    <!ATTLIST l part (I|M|F)>
]>

